@model List<SecureStore.MVC.UserDTOs.ProductModel>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/product.css"/>
    <title>Магазин - Продукты</title>
</head>
<body>
    <header>
        <div class="container">
            <h1>Мой Магазин</h1>
            <nav>
                <ul>
                    <li><a href="/Product">Продукты</a></li>
                    <li><a href="/Cart">Корзина</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="product-list">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <img src="~/images/product-placeholder.jpg" alt="Изображение продукта" class="product-image">
                <h2>@product.Name</h2>
                <p class="price">Цена: @product.ListPrice ₽</p>
                <p class="description">@product.Description</p>
                <button class="add-to-cart-btn">Добавить в корзину</button>
            </div>
        }
    </main>

    <footer>
        <p>&copy; 2024 Мой Магазин. Все права защищены.</p>
    </footer>
</body>
</html>
