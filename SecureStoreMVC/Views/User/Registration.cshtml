@model SecureStore.API.DTOs.UserDTOs.UserRegistrationModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/register.css">
    <title>Регистрация</title>
</head>
<body>
    <div class="container">
        <h1>Создайте аккаунт</h1>
        <form id="registrationForm" action="UserRegistration" method="post">
            <div class="form-group" >
                <label for="firstName">Имя:</label>
                <input type="text" id="firstName" placeholder="Введите ваше имя" required name="Firstname">
            </div>
            <div class="form-group">
                <label for="lastName">Фамилия:</label>
                <input type="text" id="lastName" placeholder="Введите вашу фамилию" required name="LastName">
            </div>
            <div class="form-group">
                <label for="email">Электронная почта:</label>
                <input type="email" id="email" placeholder="Введите вашу почту" required name="Email">
            </div>
            <div class="form-group">
                <label for="username">Имя пользователя:</label>
                <input type="text" id="username" placeholder="Создайте имя пользователя" required name="UserName">
            </div>
            <div class="form-group">
                <label for="password">Пароль:</label>
                <input type="password" id="password" placeholder="Создайте пароль" required name="Password">
            </div>
            <div class="form-group">
                <label for="ConfirmPassowrd">Пароль:</label>
                <input type="password" id="password" placeholder="Создайте пароль" required name="ConfirmPassword">
            </div>
            <button type="submit">Зарегистрироваться</button>
        </form>
    </div>
    <script src="script.js"></script>
</body>
</html>
